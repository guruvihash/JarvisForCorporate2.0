<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ironsplash"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="J A R V I S"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="74dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="J A R V I S"
        android:textSize="30dp"
        android:textColor="#E53935"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="200dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="40dp"
        android:textSize="23dp"
        android:textColor="#F3E9E9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="40dp"
        android:textSize="23dp"
        android:textColor="#FAF2F2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="40dp"
        android:textSize="23dp"
        android:textColor="#FAF8F8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code:"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="40dp"
        android:textSize="23dp"
        android:textColor="#FDFCFC"/>



    <EditText
        android:id="@+id/et1"
        android:hint="To be called..."
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#51E53935"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="145dp"/>

    <EditText
        android:id="@+id/et2"
        android:hint="Sharing Information..."
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#51E53935"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="145dp"/>

    <EditText
        android:id="@+id/et3"
        android:hint="To contact..."
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#51E53935"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="145dp"/>

    <EditText
        android:id="@+id/et4"
        android:hint="For your security..."
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#51E53935"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="145dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/details"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="165dp"
        />

    <Button
        android:id="@+id/b2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#E53935"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="60dp"
        android:text="P R O C E E D"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#E53935"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="60dp"
        android:text="L O G I N"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing account..."
        android:textColor="#fff"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="40dp"
        android:textSize="16dp"/>




</RelativeLayout>